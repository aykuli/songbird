# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
# Tab indentation (no size specified)
indent_style = space
indent_size = 2

charset = utf-8

trim_triling_whitespace = true
insert_final_newline = true
end_of_line = lf
max_line_length = off

[CHANGELOG.md]
indent_size = false